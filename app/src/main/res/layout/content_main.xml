<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="net.jackapp.auctionchecker.MainActivity">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!-- The navigation drawer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:background="@color/colorPrimaryDark"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_settings_white_24dp"/>
                <TextView
                    android:paddingTop="2dp"
                    android:paddingLeft="5dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary700" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_content_paste_white_24dp"/>
                <TextView
                    android:paddingTop="2dp"
                    android:paddingLeft="5dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paste link" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary700" />

            <!--<ListView-->
            <!--android:id="@+id/left_drawer"-->
            <!--android:layout_width="240dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:choiceMode="singleChoice"-->
            <!--android:divider="@android:color/transparent"-->
            <!--android:dividerHeight="0dp" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:navigationIcon="@mipmap/ic_menu_white_24dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <LinearLayout
                android:id="@+id/found_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <net.jackapp.auctionchecker.CaviarTV
                    android:id="@+id/title_found"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:linksClickable="false"
                    android:longClickable="false"
                    android:maxLines="2"
                    android:text="Title"
                    android:textColor="#333333"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/picture_found"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/title_found"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:src="@drawable/no_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/picture_found"
                    android:orientation="horizontal">

                    <net.jackapp.auctionchecker.CaviarTV
                        android:id="@+id/buy_it_now_found"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="-"
                        android:textAlignment="center" />

                    <net.jackapp.auctionchecker.CaviarTV
                        android:id="@+id/save_auction_btn_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:lines="1"
                        android:onClick="saveAuction"
                        android:text="Save"
                        android:textAlignment="center"
                        android:textColor="#0088ff"
                        android:visibility="invisible" />

                    <net.jackapp.auctionchecker.CaviarTV
                        android:id="@+id/clear_view_btn_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:lines="1"
                        android:onClick="closeFoundItem"
                        android:text="Close"
                        android:textAlignment="center"
                        android:textColor="#0088ff"
                        android:visibility="invisible" />

                    <net.jackapp.auctionchecker.CaviarTV
                        android:id="@+id/price_found"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="-"
                        android:textAlignment="center" />

                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_auctions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#f1f1f1" />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="onPasteAuctionLink"
            android:src="@mipmap/ic_content_paste_white_24dp"
            app:backgroundTint="@color/colorAccent" />

    </android.support.v4.widget.DrawerLayout>

</android.support.design.widget.CoordinatorLayout>