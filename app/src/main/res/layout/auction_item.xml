<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_row"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/picture_row"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:src="@drawable/img_no_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <net.jackapp.auctionchecker.CaviarTV
                        android:id="@+id/title_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="6dp"
                        android:lines="1"
                        android:layout_marginRight="25dp"
                        android:text="Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title "
                        android:textColor="#000000"
                        android:textSize="12dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:alpha=".2"
                        android:padding="6dp"
                        android:id="@+id/delete_row"
                        android:src="@mipmap/ic_clear_black_18dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/price_row_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_row"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <net.jackapp.auctionchecker.CaviarTV
                        android:id="@+id/buy_it_now_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="200 000 123,00 PLN"
                        android:textColor="@color/colorAccentDark"
                        android:textSize="16dp" />

                    <net.jackapp.auctionchecker.CaviarTV
                        android:id="@+id/price_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="123 000.99PLN"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorAccentDark"
                        android:textSize="16dp"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <net.jackapp.auctionchecker.CaviarTV
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#aaa"
                            android:text="End time:"
                            android:textSize="10sp" />

                        <net.jackapp.auctionchecker.CaviarTV
                            android:id="@+id/date_row"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:text="2016-04-02 12:56:33"
                            android:textColor="#333"
                            android:textSize="10sp"
                            android:layout_marginLeft="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <net.jackapp.auctionchecker.CaviarTV
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active:"
                            android:textColor="#aaa"
                            android:textSize="10dp" />

                        <ImageView
                            android:id="@+id/active_row"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/red_dot" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <net.jackapp.auctionchecker.CaviarTV
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#aaa"
                            android:text="www:"
                            android:textSize="10sp" />

                        <net.jackapp.auctionchecker.CaviarTV
                            android:id="@+id/url_row"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:text="ebay linkebay linkebay linkebay linkebay linkebay linkebay linkebay linkebay linkebay linkebay linkebay linkebay link"
                            android:textColor="#333"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textSize="10sp"
                            android:layout_marginLeft="3dp" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                        <Button
                            android:id="@+id/url_btn_row"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show site"
                            android:layout_alignParentLeft="true"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="8sp"
                            android:layout_marginLeft="3dp" />
                        <Button
                            android:id="@+id/history_btn_row"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:text="Show history"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="8sp"
                            android:layout_marginLeft="3dp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>