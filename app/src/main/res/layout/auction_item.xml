<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:background="@drawable/shadow_list_item">

        <ImageView
            android:id="@+id/picture_row"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img_no_img"
            android:layout_margin="2dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:background="#fff">

            <net.jackapp.auctionchecker.CaviarTV
                android:id="@+id/title_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:lines="1"
                android:text="-"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_row"
                android:id="@+id/price_row_layout"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <net.jackapp.auctionchecker.CaviarTV
                    android:id="@+id/price_row"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:text="200 000 123,00 PLN"
                    android:textColor="#000000" />

                <net.jackapp.auctionchecker.CaviarTV
                    android:id="@+id/bid_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:lines="1"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:maxLines="2"
                    android:text="123 000.99PLN" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/price_row_layout"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <net.jackapp.auctionchecker.CaviarTV
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End time:"
                    android:textColor="#aaa"
                    android:textSize="10dp" />

                <net.jackapp.auctionchecker.CaviarTV
                    android:id="@+id/date_row"
                    android:textColor="#333"
                    android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="10dp"
                    android:text="2016-04-02 12:56:33"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/price_row_layout"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <net.jackapp.auctionchecker.CaviarTV
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active:"
                    android:textColor="#aaa"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/active_row"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/red_dot" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>