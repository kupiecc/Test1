<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:padding="10dp">
        <net.jackapp.auctionchecker.CaviarTV
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/picture_view"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/a1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <net.jackapp.auctionchecker.CaviarTV
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price now:"
                android:textSize="12dp" />

            <net.jackapp.auctionchecker.CaviarTV
                android:id="@+id/price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34 456.99 PLN"
                android:layout_marginBottom="5dp"
                android:textColor="#000"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".5"
            android:paddingRight="10dp">

            <net.jackapp.auctionchecker.CaviarTV
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bid:"
                android:textSize="12dp" />

            <net.jackapp.auctionchecker.CaviarTV
                android:id="@+id/bid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31 456.99 PLN"
                android:layout_marginBottom="5dp"
                android:textColor="#000"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <net.jackapp.auctionchecker.CaviarTV
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link"
            android:textSize="12dp" />

        <net.jackapp.auctionchecker.CaviarTV
            android:id="@+id/url_view"
            android:layout_width="wrap_content"
            android:textColor="#0088ff"
            android:layout_height="wrap_content"
            android:text="http://www.ebay.com/itm/nate-berkus-owned-pair-of-brass-swing-arm-scones-with-shades/272193640406?hash=item3f600157d6"
            android:lines="1"
            android:textSize="15dp"
            android:ellipsize="end" />
        <net.jackapp.auctionchecker.CaviarTV
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End time"
            android:textSize="12dp" />

        <net.jackapp.auctionchecker.CaviarTV
            android:id="@+id/end_time_view"
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="2016-04-07 16:09:57"
            android:textSize="15dp" />


    </LinearLayout>


</LinearLayout>